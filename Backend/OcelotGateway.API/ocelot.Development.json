{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  },
  "Routes": [

    {
      "UpstreamPathTemplate": "/gateway/transaction/{accountId}",
      "UpstreamHttpMethod": [ "GET" ],

      "DownstreamPathTemplate": "/api/v1/Transaction/{accountId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5001"
        }
      ],
      "FileCacheOptions": {
        "TtlSeconds": 20
      }

    },
    {
      
        "UpstreamPathTemplate": "/gateway/transaction", // Think about adding acc id
        "UpstreamHttpMethod": [ "POST" ],
    
        "DownstreamPathTemplate": "/api/v1/Transaction",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
            {
            "Host": "localhost",
            "Port": "5001"
            }
        ],
        "FileCacheOptions": {
            "TtlSeconds": 20
        }
    }
  ]
}